{
    "description": "Basic client-server edition",
    "plugins": [
        "tiddlywiki/tiddlyweb",
        "tiddlywiki/filesystem",
        "tiddlywiki/highlight"
    ],
    "themes": [
        "tiddlywiki/vanilla",
        "tiddlywiki/snowwhite"
    ],
    "build": {
        "index": [
            "--render",
            "[!is[system]!is[image]]",
            "[is[tiddler]splitregexp[\\W+]join[-]removesuffix[-]] ~[is[tiddler]splitregexp[\\W+]join[-]] +[lowercase[]addsuffix[.html]]",
            "text/plain",
            "$:/template",

            "--render",
            "$:/style.css",
            "css/style.css",
            "text/plain"
        ]
    }
}
