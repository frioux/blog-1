{
    "description": "Basic client-server edition",
    "plugins": [
        "tiddlywiki/tiddlyweb",
        "tiddlywiki/filesystem",
        "tiddlywiki/highlight"
    ],
    "themes": [
        "tiddlywiki/vanilla",
        "tiddlywiki/snowwhite"
    ],
    "build": {
        "index": [
            "--rendertiddlers",
            "[!is[system]!is[image]]",
            "$:/template",
            "static",
            "text/plain",

            "--rendertiddler",
            "$:/style.css",
            "static/css/style.css",
            "text/plain"
        ]
    }
}
